generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  orders    Order[]
}

model Product {
  id          Int         @id @default(autoincrement())
  code        String?     @unique
  name        String
  nameEn      String      @default("")
  nameJa      String      @default("")
  subtitle    String      @default("")
  subtitleEn  String      @default("")
  subtitleJa  String      @default("")
  description String
  descriptionEn String    @default("")
  descriptionJa String    @default("")
  price       Float
  originalPrice Float     @default(0)
  image       String
  images      String      @default("[]")
  category    String      @default("mattress")
  subcategory String      @default("hotel")
  specifications String   @default("{}")
  features    String      @default("[]")
  isFeatured  Boolean     @default(false)
  isBestSeller Boolean    @default(false)
  isNewArrival Boolean    @default(false)
  rating      Float       @default(4.8)
  reviewCount Int         @default(0)
  warranty    String      @default("")
  deliveryTime String     @default("")
  stock       Int         @default(0)
  createdAt   DateTime    @default(now())
  orderItems  OrderItem[]
}

model Order {
  id              Int         @id @default(autoincrement())
  userId          Int
  user            User        @relation(fields: [userId], references: [id])
  status          String      @default("pending")
  totalPrice      Float
  stripeSessionId String?     @unique
  paymentIntentId String?
  createdAt       DateTime    @default(now())
  items           OrderItem[]
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  order     Order   @relation(fields: [orderId], references: [id])
  productId Int
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float
}

model Event {
  id        Int      @id @default(autoincrement())
  type      String
  productId Int?
  sessionId String
  userAgent String
  createdAt DateTime @default(now())
}

model Lead {
  id        Int      @id @default(autoincrement())
  contact   String
  source    String   @default("popup")
  locale    String   @default("zh")
  createdAt DateTime @default(now())
}
